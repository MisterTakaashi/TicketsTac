<Page x:Class="TicketsTacGui.DbConnectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TicketsTacGui"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="DbConnectPage">

    <Grid>
        <TextBox x:Name="textbox_host" HorizontalAlignment="Left" Height="23" Margin="101,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBox_username" HorizontalAlignment="Left" Height="23" Margin="101,129,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textbox_password" HorizontalAlignment="Left" Height="23" Margin="101,157,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button_connect" Content="Connection" HorizontalAlignment="Left" Margin="125,185,0,0" VerticalAlignment="Top" Width="75" Click="button_connect_Click"/>

    </Grid>
</Page>
