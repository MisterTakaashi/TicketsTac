<Page x:Class="TicketsTacGui.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TicketsTacGui"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="LoginPage">

    <Grid>
        <Label x:Name="label" Content="Tickets Tac" Margin="0,50" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <TextBox x:Name="textBoxUsername" HorizontalAlignment="Center" Height="25" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="0,80"/>
        <PasswordBox x:Name="passwordBoxPassword" HorizontalAlignment="Center" Margin="0,110" Height="25" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="buttonConnexion" Content="Connexion" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,150,0,0"/>
    </Grid>
</Page>
